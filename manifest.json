{
  "manifest_version": 3,
  "name": "Gmail AI Copilot",
  "short_name": "GmailCopilot",
  "version": "0.2.0",
  "description": "Suggest Gmail labels with AI in the email detail view.",
  "permissions": ["storage"],
  "minimum_chrome_version": "88",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Gmail AI Copilot",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
